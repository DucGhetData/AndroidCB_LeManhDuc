<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- Tieu de-->
    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lâp trình huong su kien"
        android:background="#611BDE"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>
    <!--Input A -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So A:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edt_a"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:inputType="number"
            android:hint="So A"/>
    </LinearLayout>
    <!-- Input B -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So B:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edt_b"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:inputType="number"
            android:hint="So B"/>
    </LinearLayout>
    <!-- Ket qua-->
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#611BDE"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:padding="6dp"/>
    <!-- Nut tính toán-->
    <Button
        android:id="@+id/tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tong 2 so"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/hieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hieu hai so"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/tich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tich hai so"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/thuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thuong 2 so"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/uoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uoc chung lon nhat"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoat chuong trinh"
        android:layout_marginTop="6dp"/>
</LinearLayout>